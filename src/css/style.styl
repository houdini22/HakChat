@require './_reset.css'

html
  width 100%
  height 100%

body
  position relative
  width 100%
  height 100%
  font-family Arial, Helvetica, sans-serif !important

input
  border 1px solid darkgrey
  height 25px
  line-height 25px
  outline 0 none
  color darkslategrey
  padding 0 10px

.start-screen
  width 300px
  height 300px
  position absolute
  left 50%
  top 50%
  margin-left -150px
  margin-top -150px
  border 1px solid darkgrey
  text-align center
  form
    & > div.has-input
      margin-bottom 15px
      margin-top 15px
    & > div.has-button
      position absolute
      left 0
      right 0
      bottom 0
      height 40px
      line-height 40px


.chat-screen
  width 800px
  height 600px
  position absolute
  left 50%
  top 50%
  margin-left -400px
  margin-top -300px
  border 1px solid darkgrey
  .new-message
    position absolute
    left 0
    right 0
    bottom 0
    height 35px
    line-height 33px
    border-top 1px solid darkgrey
    input
      width calc(100% - 20px)
      border 0 none
      height 35px
      line-height 35px
  .messages
    position absolute
    left 0
    right 200px
    top 0
    bottom 35px
    overflow hidden
    overflow-y scroll
    .message
      &.odd
        background lightgray
      p
        margin 0
        padding 2px 5px
        font-size 13px
        & > *
          display inline-block
          margin-right 10px
        .date
          color darkslategrey
        .nick
          font-weight bold
  .users-joined
    position absolute
    width 200px
    right 0
    top 0
    bottom 35px
    border-left 1px solid darkgrey
    p
      padding 2px 5px
      font-size 13px
      .ip
        margin-left 10px
        font-size 11px
        color #aaa